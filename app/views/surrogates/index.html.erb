<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "Import BibTeX file", new_import_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Author(s)</th>
      <th>Details</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <% @surrogates.each do |srg| %>
      <tr>
        <td><%= srg.entry_type %></td>
        <td><%= srg.surrogate_elements.where(field_name: "title").first.se_values.first.value %></td>
        <td><%= if srg.surrogate_elements.where(field_name: "author").first != nil
		  x = srg.surrogate_elements.where(field_name: "author").first.se_values.each do |a|
		    a.value
		  end
		  i = 0
		  @authors = ""
		  while x[i] != nil do
		    if x[i+1] != nil
		      @authors = @authors+"#{x[i].value} and "
		    else
		      @authors = @authors+"#{x[i].value}"
		    end
		  i = i+1
		  end
		  puts = @authors
		end
	%></td>
        <td><%= link_to 'Details', srg, class: "btn btn-info" %>
        <td><%= if srg.url != nil 
		  link_to "View Resource", srg.url, class: "btn btn-success"
		end
	%></td>
      </tr>
    <% end %>
  </tbody>
</table>
