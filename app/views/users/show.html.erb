<!-- Affichage de la barre de navigation -->

<%= render 'layouts/user_navbar' %>

<!-- Affichage du nom de l'utilisateur comme en-tête -->

<h2 align="center"><%= @user.nom %><small> personal space</small></h2>
<div style="margin-bottom: 15px">

<!-- Choix entre la consultation de ses information
ou de ses ressources (collections/classifications/ressources) -->

  <h5>My informations | My resources</h5>
</div>

<!-- Découpe la page en deux. 
Panel 1 : Gestion des collections
-->

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <b>MY COLLECTIONS</b>
      </div>
      <div class="panel-body">
        <% @user.resource_collections.order(:collection_name).each do |rc| %>
	<div class="row">
	  <div class="col-sm-3">
	    <h4><%= rc.collection_name %></h4>
	  </div>
	  <div class="col-sm-9" align="right">
	    <div class="btn-group" role="group">
	      <%= link_to "Show", surrogates_path(:collection_id => rc.id), :class => "btn btn-success", style: "color: #fff" %>
	      <%= link_to "Edit", "#", :class => "btn btn-info", style: "color: #fff" %>
	      <%= link_to "Delete", resource_collection_path(rc), method: :delete, data: {confirm: "Are you sure?" }, :class => "btn btn-danger", style: "color: #fff" %>
	    </div>
	  </div>
	</div>
	<% end %>
      </div>
    </div>
  </div>

<!-- Panel 2 : Gestion des classifications
-->

  <div class="col-sm-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <b>MY CLASSIFICATIONS</b>
      </div>
      <div class="panel-body">
        ...
      </div>
    </div>
  </div>
</div>
