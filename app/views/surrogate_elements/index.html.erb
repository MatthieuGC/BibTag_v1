<p id="notice"><%= notice %></p>

<h1>Listing Surrogate Elements</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surrogate_elements.each do |surrogate_element| %>
      <tr>
        <td><%= link_to 'Show', surrogate_element %></td>
        <td><%= link_to 'Edit', edit_surrogate_element_path(surrogate_element) %></td>
        <td><%= link_to 'Destroy', surrogate_element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

