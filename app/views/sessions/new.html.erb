<!-- Affichage de la barre de navigation -->

<%= render 'layouts/signin_navbar' %>

<!-- Formulaire de connexion -->

<h1>Sign in!</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in!" %>
  </div>
<% end %>

<!-- Si l'utilisateur n'est pas inscrit, on guide vers la page
d'inscription -->

<p>Not already registered ? <%= link_to "Sign up!", '/signup' %></p>

